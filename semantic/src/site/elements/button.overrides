/*******************************
         Site Overrides
*******************************/

// Custom class for wider buttons
.button-wide {
  width: 280px;
  max-width: 100%;
}

.ui.button.alert {
  border: 2px solid @attention;
}

// Override for icon in button
.ui.button > .icon:not(.button) {
  opacity: 1;
  vertical-align: 'middle';
  transform: translateY(-2px); // Might not work for larger icons
}

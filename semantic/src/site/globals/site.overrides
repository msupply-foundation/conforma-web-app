/*--------------------------------
      Template Builder
---------------------------------*/

@indicatorColor: #e8e8e8;

.io-wrapper {
  .flex-row();
  align-items: stretch;
  margin: 2px;
  .io-component {
    flex-grow: 1;
    margin: 0px;
    text-align: center;
    white-space: nowrap;
    border: 2px solid @indicatorColor;
    border-radius: @borderRadius;
    font-size: 12px;
    padding: 2px;
    padding-left: 10px;
    padding-right: 10px;
  }

  input,
  textarea {
    border: none !important;
    margin: 0px !important;
    padding: 0px !important;
    font-size: 12px !important;
    width: none !important;
    min-width: 200px;
  }

  .key {
    border-end-end-radius: 0px;
    border-start-end-radius: 0px;
    background-color: @indicatorColor;
    a {
      text-decoration: underline;
    }
  }

  .value {
    border-start-start-radius: 0px !important;
    border-end-start-radius: 0px !important;
    background-color: @surfacesWhite !important;
    max-width: 600px !important;
  }
}

.from-existing-dropdown {
  font-size: 12px !important;
  border: 2px solid @indicatorColor !important;
  border-radius: @borderRadius !important;
  margin: 2px !important;
}

.icon-button {
  padding: 0px !important;
  margin: 0px !important;
  margin-right: 5px !important;
  margin-left: 5px !important;
}

.longer {
  input,
  textarea {
    min-width: 600px !important;
  }
}
.long {
  input,
  textarea {
    min-width: 400px !important;
  }
}
.template-builder-templates {
  width: @applicationListWidth;
  .top-bar {
    .flex-row();
    align-items: center;
  }
}

.collapsed-start-row {
  height: 10px !important;
  td {
    text-align: center !important;
  }
}

.collapsed-end-row {
  height: 2px !important;
}

.template-builder-wrapper {
  width: @applicationListWidth;
  .template-builder-info-bar {
    .flex-row();
    justify-content: center;
  }
  .template-builder-tabs {
    .flex-row();
    margin: 5px;

    div {
      .clickable();
      padding: 5px;
      flex-grow: 1;
      text-align: center;
      border-radius: @borderRadius;
    }
  }
}

.template-buider-category-input {
  .flex-column-center-start();
  margin: 3px;
  padding: 20px;
  border-radius: @borderRadius;
  background: @surfacesWhite;
  p {
    font-size: @slightlySmallerText;
    margin-top: 10px;
    margin-bottom: 5px;
  }
}

.template-bulder-filter-input {
  .template-buider-category-input();
}

.builder-selected {
  background-color: @darkGrey !important;
  color: @surfacesWhite !important;
  .header {
    color: @surfacesWhite !important;
  }
}

.builder-page-elements-wrapper {
  background: white;
  padding: 10px;
  margin: 10px;
  .element-config-options-container {
    .flex-row();
    align-items: flex-start;
    justify-content: flex-end;
    width: 100px;
    margin-right: 30px;
    margin: 5px;
  }
  .form-element-wrapper {
    justify-content: flex-start !important;
  }
}

.evaluation-container {
  border-radius: @borderRadius;
  border: 1px solid @indicatorColor;
  padding: 2px;
  padding-left: 5px;
  padding-right: 5px;
  margin: 2px;
  background-color: @surfacesWhite;
  .evaluation-container-title {
    .flex-row-center-center();
  }
  .evaluation-container-content {
    .flex-row() !important;
    align-items: flex-start;
    justify-content: space-between;
  }
}

.config-modal {
  width: 90% !important;

  .config-modal-container {
    .flex-column-center-center();
    padding: 10px;
  }
  .config-modal-info {
    background-color: @surfacesWhite !important;
  }
}

.object-properties-container {
  .flex-column-start-center();
  margin-left: 30px;
}
.evaluator-operator-container {
  .flex-column-start-start();
  background: rgba(0, 0, 0, 0.03);
  padding: 5px;
  margin: 2px;
  border-radius: @borderRadius;
  border: 2px solid rgba(0, 0, 0, 0.2);
  background-color: rgba(50, 252, 50, 0.01);
}

.config-container {
  .flex-column-start-start();
  padding: 10px;
  border-radius: @borderRadius;
  background-color: @surfacesWhite;
  margin: 5px;
}

.config-container-alternate {
  .config-container();
  background-color: rgba(0, 0, 0, 0.03);
}

/*******************************
             Headers
*******************************/

// Note -- normally we will use the <Header/> component which already
// contains these definitions. But this allows us to use <h1>, <h2>, etc.
// directly if required

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: @headerFont;
  line-height: @headerLineHeight;
  margin: @headerMargin;
  font-weight: @headerFontWeight;
  padding: 0em;
}

h1 {
  min-height: 1rem;
  font-size: @h1;
  font-weight: @regularWeight;
}
h2 {
  font-size: @h2;
  font-weight: @regularWeight;
}
h3 {
  font-size: @h3;
  font-weight: @regularWeight;
  color: @darkGrey;
}
h4 {
  font-size: @h4;
  font-weight: @semiboldWeight;
  text-transform: uppercase;
  color: @darkGrey;
}
h5 {
  font-size: @h5;
  font-weight: @semiboldWeight;
  color: @darkGrey;
}
h6 {
  font-size: @h6;
  font-weight: @semiboldWeight;
  text-transform: uppercase;
  color: @darkGrey;
}

h1:first-child,
h2:first-child,
h3:first-child,
h4:first-child,
h5:first-child,
h6:first-child {
  margin-top: 0em;
}

h1:last-child,
h2:last-child,
h3:last-child,
h4:last-child,
h5:last-child,
h6:first-child {
  margin-bottom: 0em;
}

/*-----------------------------------------------------
      Mobile & Desktop
      - classes for hiding on Mobile or Desktop devices
------------------------------------------------------*/

// Desktop
@media only screen and (min-width: @tabletBreakpoint) {
  .hide-on-desktop {
    display: none !important;
  }
}
// Mobile
@media only screen and (max-width: @largestMobileScreen) {
  .hide-on-mobile {
    display: none !important;
  }
}

}

/*-----------------------------------------------------
      Mobile & Desktop
      - classes for hiding on Mobile or Desktop devices
------------------------------------------------------*/

// Desktop
@media only screen and (min-width: @tabletBreakpoint) {
  .hide-on-desktop {
    display: none !important;
  }
  #menu-bar {
    font-size: inherit;
    position: absolute;
    top: 5px;
    .list {
      display: flex;
      align-items: start;
      gap: 20px;
    }
    .ui .dropdown {
      display: flex;
    }
    // These selectors are so we can remove 'horizontal' prop on list in #menu-bar
    // so that it will work with mobile
    .ui.list > .item:first-child,
    .ui.list > .item:last-child {
      padding-top: @relative3px;
      padding-bottom: @relative3px;
    }
  }
}

// Mobile
@media only screen and (max-width: @largestMobileScreen) {
  .hide-on-mobile {
    display: none !important;
  }

  #content-area {
    padding-top: calc(@mobileHeaderHeight + 12px);
  }

  #user-area {
    height: @mobileHeaderHeight;
    padding-left: 10px;
    .visible.menu .item {
      // font-size: 1rem;
      // padding: 0.8em !important;
      .dropdown {
        padding: 0 !important;
      }
    }
  }

  #user-area-left {
    max-width: 100%;
    padding-right: 25px;
    #org-selector {
      font-size: 100%;
      letter-spacing: unset;
      line-height: 1.3em;
      #org-label {
        max-width: 700px;
      }
    }
    #org-selector .image {
      margin-right: 10px;
      max-width: 100px;
      height: auto;
      max-height: 100%;
    }
  }

  #menu-bar {
    font-size: inherit;
    position: absolute;
    top: @mobileHeaderHeight;
    left: 0px;
    width: 100%;
    background-color: inherit;
    .list {
      background-color: inherit;
      z-index: 2000;
      padding: 5px 30px 10px 25px;
    }
    .list .item {
      padding-top: 0.4em;
      padding-bottom: 0.4em;
    }
    .ui .dropdown {
      display: flex;
    }
  }

  .menu-divider {
    margin: 0 !important;
  }

  /***********************
      Mobile Hamburger
  ***********************/
  .hamburger {
    width: 25px;
    height: 25px;
    position: absolute;
    right: 15px;
    top: 15px;
    cursor: pointer;
    display: block;
  }
  .hamburger span {
    display: block;
    height: 3px;
    background: @userAreaText;
    margin: 0 0 3px;
    transition-duration: 0.1s;
  }
  .hamburger:hover {
    -moz-opacity: 1;
    -khtml-opacity: 1;
    -webkit-opacity: 1;
    opacity: 1;
    -ms-filter: progid:DXImageTransform.Microsoft.Alpha(opacity=100);
    filter: alpha(opacity=100);
    -moz-transition-duration: 0.2s;
    -webkit-transition-duration: 0.2s;
    -o-transition-duration: 0.2s;
    transition-duration: 0.2s;
  }
  .hamburger.active {
  }
  .hamburger.active .hamburger-bun {
    margin: 0;
    -webkit-transform-origin: center center;
    transform-origin: center center;
  }

  .hamburger.active .hamburger-bun:first-child {
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    transition: all 0.2s ease-out;
    transition: all 0.2s ease;
    margin-top: 3px;
  }
  .hamburger.active .hamburger-bun:last-child {
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    transition: all 0.2s ease-out;
    transition: all 0.2s ease;
    margin-top: -3px;
  }

  .hamburger.active .hamburger-patty {
    display: none;
  }

  //Review Page layout for mobile
  #review-tabs {
    .ui.segment {
      padding: 0.5em 0.5em;
    }
    .stage-label {
      font-size: 0.7rem;
    }
  }
  #overview .left-item {
    min-width: unset;
    padding-right: 5px;
  }
  #timeline {
    margin-left: 8px;
    margin-right: 8px;
  }

  #documents-tab {
    //smaller icon in Review documents tab
    .ui.image {
      max-height: 60px;
    }
    .flex-extra {
      gap: 5px;
    }
    .ui.list {
      margin-top: 0px;
    }
    .ui.list > .item {
      margin-top: 10px;
      padding: 10px;
    }
  }

  #notes-tab {
    padding: 5px 0px 0px 5px;
    .options-row {
      flex-direction: column;
      align-items: flex-start;
    }
    .item-container {
      width: 100%;
    }
  }

  #assignment-tab {
    .assigning-row > .column {
      padding: 0.1rem 0.5rem !important;
    }
    .stage-label {
      margin-left: 3px;
    }
    .custom-assignment-grid-column {
      padding: 0.3rem 0.5rem !important;
      text-align: left;
    }
  }
}

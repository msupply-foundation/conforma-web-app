/*******************************
         Site Overrides
*******************************/

body {
  background-color: @surfacesLight;
}

p {
  font-size: @fontMedium;
  @media only screen and (max-width: @largestMobileScreen) {
    font-size: @fontSmall;
  }
  letter-spacing: 0;
  padding: 0;
}

strong {
  font-weight: @semiboldWeight;
}

p strong {
  font-weight: @semiboldWeight;
}

a {
  color: @interactiveHigh;
}

a:hover {
  color: @interactiveHigh;
  opacity: @hoverOpacity;
}

// Use this for links that use onClick (as opposed to <a> tags)
.link-style {
  color: @interactiveHigh;
}

.link-style:hover {
  color: @interactiveHigh;
  opacity: @hoverOpacity;
}

.center-text {
  text-align: center;
}

.alert {
  color: @attention;
}

.clickable {
  cursor: pointer;
}

.clickable:hover {
  opacity: @hoverOpacity;
}

.hidden-element {
  display: none !important;
}

.invisible {
  visibility: hidden;
}

/*--------------------------------
   Common layout
---------------------------------*/
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-row-center {
  .flex-row();
  justify-content: center;
}

.flex-row-space-between {
  .flex-row();
  justify-content: space-between;
}

.flex-row-space_evenly {
  .flex-row();
  justify-content: space-evenly;
}

.flex-row-start {
  .flex-row();
  justify-content: flex-start;
}

.flex-row-space {
  .flex-row();
  justify-content: space-between;
}

.flex-row-space-start {
  .flex-row-space();
  align-items: start;
}

.flex-row-start-center {
  .flex-row-start();
  align-items: center;
}

.flex-row-space-between-center {
  .flex-row-space-between();
  align-items: center;
}

.flex-row-space-between-center-wrap {
  .flex-row-space-between-center();
  flex-wrap: wrap;
}

.flex-row-space-between-flex-end {
  .flex-row-space-between-center();
  align-items: flex-end;
}

.flex-row-space_evenly-center {
  .flex-row-space_evenly();
  align-items: center;
}

.flex-row-start-start {
  .flex-row-start();
  align-items: flex-start;
}

.flex-row-center-center {
  .flex-row-center();
  align-items: center;
}

.flex-row-center-center-wrap {
  .flex-row-center-center();
  flex-wrap: wrap;
}

.flex-row-start-center-wrap {
  .flex-row-start-center();
  flex-wrap: wrap;
}

.flex-row-end {
  .flex-row();
  width: 100%;
  justify-content: flex-end;
}
.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-column-center {
  .flex-column();
  align-items: center;
}

.flex-column-start {
  .flex-column();
  justify-content: flex-start;
}

.flex-column-start-start {
  .flex-column-start();
  align-items: start;
}

.flex-column-center-start {
  .flex-column-center();
  align-items: flex-start;
}

.flex-column-start-center {
  .flex-column-center();
  align-items: flex-start;
}

.flex-column-center-center {
  .flex-column-center();
  align-items: center;
}

.flex-column-start-stretch {
  .flex-column-start();
  align-items: stretch;
}

.spacer-20 {
  height: 20px;
}

.spacer-10 {
  height: 10px;
}

.no-margin-no-padding {
  padding: 0px !important;
  margin: 0px !important;
}

.full-width-container {
  width: 100%;
}

.text-block-width {
  max-width: 800px;
}

.right-margin-space-10 {
  margin-right: 10px !important;
}

.left-margin-space-10 {
  margin-left: 10px !important;
}

.flex-gap-10 {
  gap: 10px;
}

.flex-gap-20 {
  gap: 20px;
}

/*--------------------------------
   Login page
---------------------------------*/

#login-container {
  height: 100vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

#login-box {
  display: flex;
  flex-direction: column;
  background-color: white;
  width: clamp(360px, 35%, 450px);
  box-shadow: @basicBoxShadow;
  border-radius: @borderRadius;
  padding: 20px;
}

.flex-centered {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.login-header {
  margin: 20px 0 0 0 !important;
  letter-spacing: @letterSpacingRegular !important;
  text-align: center;
}

.image-icon {
  // height: 45px;
  width: 250px;
  margin-right: 12px;
}

.form-extra-spacing {
  margin-bottom: 25px !important;
}

#login-button {
  margin-top: 30px;
}

// Localisation selector
.top-right-corner {
  position: absolute;
  top: 5px;
  right: 5px;
}

/*--------------------------------
   Main area, User area & Footer
---------------------------------*/
#main-container {
  padding: 0;
  position: relative;
  min-height: 100vh;
}

#user-area {
  font-family: @alternativeFont;
  color: @userAreaText;
  display: flex;
  position: fixed; // TO-DO: No fixed on mobile
  background-color: @headersInteractiveLow;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 20px;
  padding-right: 20px;
  gap: 20px;
  height: @headerHeight;
  justify-content: space-between;
  z-index: 1000;
  max-width: 100vw !important;
  min-width: @minimumContainerWidth;
}

#brand-area {
  min-width: 100px;
  max-width: 200px;
  display: flex;
  align-items: center;
  .brand-area-text {
    color: @userAreaText !important;
    margin: 0;
  }
  img {
    max-height: @headerHeight;
    padding-top: 8px;
    padding-bottom: 8px;
  }
  @media only screen and (max-width: 860px) {
    display: none;
  }
}

#user-area-left {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  background-color: inherit;
  justify-content: flex-end;
}

// Menu bar links
#user-area {
  a {
    color: @userAreaText;
    font-size: @fontSmall;
  }
  .menu {
    a {
      color: @headersInteractiveDarker;
    }
  }
}

#user-menu {
  text-align: right;
  display: flex;
  align-items: center;
  .button {
    margin-top: 10px;
    border-radius: 20px;
    background-color: @surfacesWhite;
    color: @darkGrey;
    min-width: 120px;
    max-width: 300px;
    font-weight: 600;
  }
  .ui .dropdown {
    display: flex;
  }
  .ui.dropdown > .text {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    white-space: nowrap;
  }
  .ui.dropdown .menu {
    right: 0;
    left: unset;
  }
}

// Not currently used, but should be applied to the Link in the menu
// bar that reflects the current page
.selected-link {
  font-weight: bold;
}

#org-selector {
  font-size: @fontLarge;
  letter-spacing: @letterSpacingLarge;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  height: 100%;
  max-height: 55px;

  .ui.dropdown .menu {
    letter-spacing: @letterSpacingRegular;
    min-width: 90%;
    left: revert;
    right: 0;
  }
}

#org-selector .image {
  margin-right: 20px;
  height: 100%;
  max-width: 300px;
}

#language-modal {
  display: flex;
  flex-direction: column;
  max-width: 350px;
  border-radius: @borderRadius;
  padding: 12px;

  .ui.form {
    margin-top: 15px;
  }
}

// Whole content container except Header and Footer
#content-area {
  padding-top: @headerHeight + 12px;
  padding-right: 12px;
  padding-left: 12px;
  padding-bottom: @footerHeight + 25px; // To allow for footer
  display: flex;
  flex-direction: column;
  align-items: center;
}

#footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  margin-top: 20px;
  padding: 10px;
  padding-left: 30px;
  @media only screen and (max-width: @largestMobileScreen) {
    padding-left: 15px;
  }
  height: @footerHeight;
  position: absolute;
  bottom: 0;
}

#footer-content-left {
  // border: 1px solid black;
  display: flex;
  flex-direction: row;
  max-width: 300px;
  align-items: center;
}

#footer-content-left .ui.image {
  max-height: @footerHeight - 20px;
}

#footer-content-left p {
  font-size: @fontXXsmall;
  color: @surfacesDark;
  margin-left: 10px;
  .name {
    font-size: @fontXsmall;
  }
}

#footer-content-center {
  width: 100%;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  max-width: 60%;
  p {
    font-size: @smallerText;
  }
  @media only screen and (max-width: 860px) {
    display: none;
  }
}

/*-----------------------------------
   Application/Review Wrappers
------------------------------------*/

#application-area {
  .flex-column-center();
}

// Moves back up if UserArea is not displayed
#application-area.non-registered {
  margin-top: -@headerHeight;
}

#content-area .top-container {
  margin-top: 20px;
  max-width: @applicationFormWidth;
  width: 100%;
}

// Back to application list label
#content-area .back-label {
  min-width: 132px;
  background-color: transparent;
  font-size: @fontSmall;
  font-weight: @regularWeight;
  padding-left: 0;
}

/*---------------------------------------
   Application Home -- Start/Create page
----------------------------------------*/

#application-home-content {
  display: flex;
  flex-direction: column;
  background-color: @surfacesWhite;
  width: 800px;
  padding: 30px 50px 32px;
  @media only screen and (max-width: @largestMobileScreen) {
    padding: 20px;
  }
}

// Steps line (vertical box - layout)
.section-single-row-box-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  min-height: 30px; // TODO: Need to be updated for mobile
  align-items: center;
  justify-content: flex-end;
}

// Inner steps line (left side - icon & header)
.centered-flex-box-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

// Steps line - progress bar (box)
.progress-box {
  padding-right: 50px;
  height: 30px;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

// Steps line - progress bar
.progress {
  width: 120px;
}

// Steps line - actions box
.actions-box {
  min-width: 120px;
  text-align: right;
}

// Message area segment - bottom of application home/create
.padding-zero {
  padding: 0;
}

/*---------------------------------------
      Review Submission Document Preview
----------------------------------------*/

#preview-modal {
  min-height: 60vh;
  max-width: 700px;
  .content {
    padding-left: 20px;
    padding-right: 20px;
  }
  .actions {
    position: absolute;
    bottom: 0;
    width: 100%;
  }
  #preview-items {
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-width: 650px;
    margin-top: 20px;
    margin-bottom: 60px; // to offset the Actions area that covers it.
    .item {
      background-color: @surfacesLight;
      width: 90%;
      border-radius: @borderRadius;
      padding: 10px;
    }
    .notification-preview {
      padding-top: 5px;
      padding-bottom: 5px;
      h1,
      h2 {
        font-size: 1.1em;
        font-weight: bold;
      }
      h3,
      h4 {
        font-size: 1em;
      }
      p {
        font-size: 0.95em;
      }
      .content {
        margin-top: 10px;
        margin-bottom: 10px;
      }
    }
    .document-preview {
      .flex-row-start-center();
      padding-left: 6px;
      gap: 10px;
    }
    .error-item,
    .fallback-preview {
      p {
        font-size: 1em;
      }
    }
    .fallback-preview pre {
      font-size: 0.9em;
      margin: 0;
    }
  }
}

/*---------------------------------------
      Review Home page
----------------------------------------*/

#review-filters-container {
  color: @headersInteractiveMed;
  font-size: @fontSmall;
  font-weight: @semiboldWeight;
  flex-wrap: wrap;
  gap: 10px;
}

#review-home-header {
  display: flex;
  align-items: center;
  padding-bottom: 10px;

  .ui.header {
    margin-top: 0em;
  }
}

// Progress bar on Review home page

#review-progress {
  width: 100%;
  .flex-row-center();
  margin-top: 40px;
  margin-bottom: 100px;
}

#stepper-wrapper {
  width: 90%;
  max-width: 800px;
}

.stepper {
  .step.completed {
    background: @success;
  }

  .content {
    text-align: center;
    left: -80px;
  }
  .content.last {
    text-align: center;
  }

  .step.pending {
    background: @surfacesWhite;
    border: 2px solid @surfacesDark;
    .content {
      margin-top: 1.2em; // to offset height added by grey border
    }
  }

  .title {
    color: @headersInteractiveLow;
    font-family: @fontName;
  }
  .progress-bar.pending {
    background: @surfacesDark;
  }

  .progress-bar.progress {
    background: @surfacesDark;
  }

  .progress-bar.progress::after {
    background: @surfacesDark;
  }

  .step-custom-content {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2px solid @surfacesDark;
    border-radius: 100%;
    background-color: @surfacesWhite;
    .icon {
      margin: 0;
      color: @interactiveHigh;
      line-height: 1;
    }
  }

  .rejected {
    border: none;
    background-color: @attention;
    .icon {
      color: @surfacesWhite;
    }
  }

  .loq {
    .icon {
      color: @attention;
    }
  }
}

.ui.segment.review-application-segment {
  margin: 0px;
  padding: 0px;
}

.review-section-row {
  .section-single-row-box-container();

  .ui.grid > .row {
    justify-content: stretch;
  }

  .assigned-column {
    text-align: center;
  }
}

.reviewer-dropdown {
  border: 1px solid @headersInteractiveMed;
  border-radius: 3px;
  padding-left: 10px;
  padding-right: 10px;
  margin-left: 10px;
  max-width: 250px;
}

.reviewer-dropdown .menu {
  // Keeps menu from disappearing under UserArea bar
  z-index: 9999 !important;
}

/*---------------------------------------
      Review page
----------------------------------------*/

// NOTE: The review page shares a lot of styles with Application Summary

.review-comment-area {
  margin-top: 10px;
  margin-left: -20px;
  margin-right: -20px;
  margin-bottom: -14px;
  border-top: 1px solid @surfacesMed;
  border-bottom: 1px solid @surfacesMed;
  padding: 10px 20px;
}

.review-button-container {
  margin: 30px 0 20px;
  .button {
    margin-right: 40px !important;
  }
}

.review-approve-all-button {
  margin-top: 20px;
}

#review-submit-area {
  margin-bottom: 30px;
  max-width: 500px;
}

#review-submit-area textarea {
  max-width: none;
}

#review-submit-area p {
  font-size: @tinyBitSmallerText;
  margin-top: 10px;
  margin-bottom: 5px;
}

#review-submit-area.ui.form .field {
  margin-bottom: 10px;
}

#review-submit-area .ui.checkbox {
  padding-left: 0;
}

#review-decision-container {
  display: flex;
  justify-content: flex-end;
  height: 100vh;
}

#document-viewer {
  // Temp values -- replace once design is clarified
  background-color: #6f6f6f5e;
  width: 800px;
}

#details-panel {
  background-color: @surfacesWhite;
  width: 400px;
  padding: 15px;
  overflow: scroll;
}

#previous-review {
  .segment {
    width: 30%;
  }
}

// Review Home page

#review-home-content {
  .flex-column-center;
}

#review-tabs {
  max-width: 900px;
}

// Overview tab

#overview {
  margin-bottom: 20px;
  .simple-label {
    position: absolute;
    right: -1px;
    top: 0;
  }
  .wrap {
    flex-wrap: wrap;
  }
  .content {
    padding-bottom: 0.75em;
  }
  .ui.message p {
    color: @headersInteractiveDarker;
    margin-bottom: 0;
  }
  .ui.message p:first-child {
    margin-top: 0.75em;
  }
  .left-item {
    min-width: 300px;
  }
  .right-item {
    // flex-grow: 2;
  }
}

#timeline {
  margin-left: 30px;
  margin-right: 30px;
  .timeline-stage {
    margin-bottom: 1.5em;
  }
  .timeline-day {
    padding: 5px;
    margin-left: 25px;
    p {
      font-size: @fontSmall;
    }
  }
  .item {
    margin-left: 20px;
    max-width: 600px;
  }
}

// Documents tab

#documents-tab {
  padding-top: 20px;
  padding-bottom: 20px;

  .flex-extra {
    flex-wrap: wrap;
    gap: 20px;
  }

  .icon-container {
    display: flex;
    justify-content: flex-end;
    min-width: 20%;
  }

  .ui.image {
    max-height: 100px;
  }

  .ui.list {
    margin-top: 10px;
  }

  .ui.list > .item {
    margin-top: 20px;
    background-color: @surfacesLight;
    padding: 15px;
    border-radius: @borderRadius;
    border: 1px solid @surfacesMed;
    h4 {
      max-width: 250px;
      line-height: 1.5em;
      margin-bottom: 0.5em;
    }
    p {
      margin-bottom: 0.4em;
    }
  }
}

// Assignment tab
#assignment-tab {
  .ui.grid {
    margin: 0;
    .assigning-row {
      background-color: @surfacesLight;
      align-items: center;
      min-height: 40px;
      margin-bottom: 5px;
      .ui.label {
        line-height: 1.5;
        font-size: 0.57;
      }
      .centered-flex-box-row {
        display: flex;
      }
    }
    .reviewer-row {
      margin-bottom: 5px;
      // max-width: 700px;
    }
    .ui.label.simple-label {
      height: 100%;
    }
  }
  .ui.grid > .row {
    border-radius: 6px;
    padding: 0px;
  }
}
// Notes tab

#notes-tab {
  margin-bottom: 30px;
  min-height: 200px;
  .wrapper {
    .flex-column-center();
  }

  .ui.message {
    min-width: 50%;
    margin: 30px 0;
  }

  .item-container {
    .flex-column();
    width: 90%;
    max-width: 750px;
  }

  .note-container {
    margin-bottom: 15px;
    padding: 14px;
    padding-right: 20px;
    padding-left: 20px;
    background: @surfacesWhite;
    border: 2px solid @surfacesMed;
    border-radius: @borderRadius;
  }

  .options-row {
    .flex-row-end();
    width: 90%;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
    p {
      margin: 0;
      font-size: @slightlySmallerText;
      font-weight: bold;
    }
  }

  .note-comment-row {
    .flex-row-space-between;
    gap: 15%;
    margin-bottom: 15px;
  }

  .file-row {
    .flex-row-start-center-wrap();
    gap: 25px;
  }

  .file-container {
    .flex-column();
    justify-content: flex-end;
    align-items: flex-start;
    max-width: 25%;
    font-size: @smallerText;
    .ui.image {
      max-height: 60px;
    }
  }

  .note-footer-row {
    align-self: flex-end;
    display: flex;
    flex-direction: column;
    p {
      margin: 0;
    }
  }

  #new-comment-form {
    margin-top: 10px;

    .textarea-row {
      .flex-row();
      flex-wrap: wrap;
    }
  }

  .ui.form {
    .field {
      margin: 0;
      flex-basis: 100%;
    }
    textarea {
      display: block;
      max-width: 500px;
    }
    h4 {
      margin-bottom: 0;
    }
    p {
      margin-top: 0;
    }
    #files-list {
      flex-basis: 30%;
      max-width: 30%;
      .floating-icon {
        position: absolute;
        left: 100%;
        top: calc(50% - 13px);
        opacity: 0;
      }
      .floating-icon:hover {
        opacity: 1;
      }
      .icon-after {
        .floating-icon {
          opacity: 0;
        }
      }
      .icon-after:hover {
        .floating-icon {
          opacity: 1;
        }
      }
    }
  }
}

/*--------------------------------
      Data views
---------------------------------*/
// See table.overrides for more customization

#data-view {
  .ui.header {
    padding-top: 30px;
  }
}

@media only screen and (max-width: @largestMobileScreen) {
  .data-view-detail-container {
    h2.ui.header {
      padding-top: 15px !important;
    }
  }
  #linked-applications-container {
    h4 {
      margin-bottom: 0;
      text-align: center;
    }
  }
}
/*--------------------------------
      Application List
---------------------------------*/

#list-top {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 5px 5px;
  margin-bottom: 10px;
}

#list-top .ui.header {
  padding-right: 20px;
  margin-top: 10px; // This is only necessary because of annoying Semantic defaults
}

.list-row {
  padding-bottom: 30px;

  .delete-icon {
    .clickable();
    padding-left: 10px;
  }
}

.flex-grow-1 {
  flex-grow: 1;
}

.application-name-cell-name {
  font-size: @slightlySmallerText;
}

.user-action {
  font-size: @fontXsmall;
  font-weight: @semiboldWeight;
}

/*--------------------------------
      Application Form area
---------------------------------*/

.dev-border {
  // border: 1px solid black;
  display: inherit;
}

#application-form {
  display: flex;
  flex-direction: column;
  background-color: @surfacesWhite;
  width: @applicationFormWidth;
  padding: 30px 1rem 32px;
}

#progress-column {
  max-width: 200px;
  padding-left: 5px;
  padding-right: 0;
  padding-top: 0;
}

.ui.stackable.grid {
  #form-column {
    padding-top: 0 !important;
    @media only screen and (max-width: @largestMobileScreen) {
      .ui.form .field {
        margin-bottom: 0.5em;
      }

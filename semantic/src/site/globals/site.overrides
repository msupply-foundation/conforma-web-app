// Layouts
.list-filter-container {
  .flex-row();

  align-items: center;
  flex-wrap: wrap;
  width: 100%;

  .list-filter-title {
    .flex-row-center-center();
    .icon {
      line-height: normal;
    }
  }

  .ui.dropdown {
    .clickable();
    .filterItem();

    .menu {
      top: 120%;
      border: solid 1px @blue;
    }

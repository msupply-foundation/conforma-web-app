/*******************************
      Re-useable components
*******************************/

// Toast

@toastTopMargin: 40px;
@toastBottomMargin: 40px;
@toastHorizontalMargin: 20px;

#toast-container {
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 1001; // one higher than Modal dimmer
  pointer-events: none;
  .block {
    position: absolute;
    .flex-column();
    gap: 10px;
    flex-wrap: wrap;
  }
  .bottom-left {
    bottom: @toastBottomMargin;
    left: @toastHorizontalMargin;
    max-height: calc(100vh - @toastBottomMargin);
  }
  .bottom-middle {
    bottom: @toastBottomMargin;
    left: 50%;
    transform: translateX(-50%);
    max-height: calc(100vh - @toastBottomMargin);
  }
  .bottom-right {
    bottom: @toastBottomMargin;
    right: @toastHorizontalMargin;
    max-height: calc(100vh - @toastBottomMargin);
    flex-wrap: wrap-reverse;
  }
  .top-left {
    top: @toastTopMargin;
    left: @toastHorizontalMargin;
    max-height: calc(100vh - @toastTopMargin);
  }
  .top-middle {
    top: @toastTopMargin;
    left: 50%;
    transform: translateX(-50%);
    max-height: calc(100vh - @toastTopMargin);
  }
  .top-right {
    top: @toastTopMargin;
    right: @toastHorizontalMargin;
    max-height: calc(100vh - @toastTopMargin);
    flex-wrap: wrap-reverse;
  }
}

.toast-wrapper {
  position: relative;
  pointer-events: auto;
  .transition.visible {
    display: flex !important;
  }
  .toast-message {
    width: fit-content !important;
    min-width: 300px;
    max-width: 350px;
    p {
      word-wrap: break-word;
      max-width: 250px;
      white-space: pre-wrap;
    }
  }
  .icon.info {
    color: @information;
  }
  .content {
    margin-right: 30px;
  }
}

.object-properties-container {
  .flex-column-start-center();
  margin-left: 10px;
  max-width: 500px;
}
.evaluator-operator-container {
  .flex-column-start-stretch();
  background: rgba(0, 0, 0, 0.03);
  padding: 5px;
  margin: 2px;
  border-radius: @borderRadius;
  border: 1px solid @surfacesMed;
}

.config-container {
  .flex-column-start-stretch();
  padding: 10px;
  border-radius: @borderRadius;
  background-color: @surfacesWhite;
  margin: 5px;
}

.config-container-alternate {
  .config-container();
  background-color: @surfacesLight;
}

.config-container-outline {
  .config-container();
  border: 1px solid @surfacesMed;
}


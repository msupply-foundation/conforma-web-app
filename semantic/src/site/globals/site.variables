/*******************************
     User Global Variables
*******************************/
@fontName: 'Open Sans';
@alternativeFont: 'Roboto'; // TO-DO: Check with Deb what to use for this

@red: @error;
@orange: #f2711c;
@yellow: #fbbd08;
@olive: #b5cc18;
@green: @success;
@teal: #00b5ad;
@blue: @interactiveHigh;
@violet: #6435c9;
@purple: #a333c8;
@pink: @attention;
@brown: #a5673f;
@grey: #767676;
@black: #000000;

/*-----------------------------------------------------
      Custom Colours -- from designer
      See: https://debs181572.invisionapp.com/console/Drug-reg-app----Desktop-ckmfpptbx008401xqfx1j17ha/ckmfppu8f003s01wvdt41eywt/play
------------------------------------------------------*/
@headerCopy: #000000;
@headersInteractiveLow: #4a4a4a;
@surfacesDark: #aeaeae;
@surfacesMed: #dcdddd;
@surfacesLight: #f0f0f0;
@surfacesWhite: #ffffff;
//
@interactiveHigh: #003bfe;
@information: #24b5df;
@success: #1eb759;
@attention: #f40081;
@error: #e40000;
//
@otherOrange: #ef7837;
@otherPeach: #ef78377f;
@otherPink: #e400007f;
@otherBlue: #24b5df7f;

// Inverted blue button
@lightBlueHover: @blue;
@lightBlueTextColor: @blue;
@lightBlue: @blue;

// Others
@headersInteractiveMed: #656565;
@borderColourDark: #777777;
@activeCommentBackground: azure;
//
@boxShadowColor: #d4d4d5;

/*------------------------
      Headers and Text
-------------------------*/

// Header font sizes (overrides except h6)
@h1: 36px;
@h2: 26px;
@h3: 20px;
@h4: 14px;
@h5: 15px;
@h6: 13px;
//
@h1Mob: 20px;
@h2Mob: 16px;
@h3Mob: 14px;
@h4Mob: 12px;
@h5Mob: 15px;
@h6Mob: 11px;

// line-height
@lineHeightSmall: 20px;
@lineHeightRegular: 24px;
@lineHeightBig: 36px;
@lineHeightBigger: 45px;

// font-weights
@regularWeight: 400;
@semiboldWeight: 600;

// font-height
@fontHeightRegular: 20px;

// letter spacing
@letterSpacingSmall: 0.36px;
@letterSpacingRegular: 1.8px;
@letterSpacingLarge: 3.4px;

// Text colours
@darkGrey: @headersInteractiveLow;
@userAreaText: white;

// Custom classes for text variants
.secondary {
  font-size: 13px;
}

// Global fonts definitions
@fontXXsmall: 10px;
@fontXsmall: 12px;
@fontSmall: 14px;
@fontMedium: 15px;
@fontLarge: 20px;
@fontXlarge: 27px;
@fontXXlarge: 36px;
// Relative sizes
@tinyBitSmallerText: 0.95em;
@slightlySmallerText: 0.9em;
@smallerText: 0.85em;

.xx-small {
  font-size: @fontXXsmall;
}
.x-small {
  font-size: @fontXsmall;
}
.small {
  font-size: @fontSmall;
}
.medium {
  font-size: @fontMedium;
}
.large {
  font-size: @fontLarge;
}
.x-large {
  font-size: @fontXlarge;
}
.xx-large {
  font-size: @fontXlarge;
}

.interactive {
  color: @interactiveHigh; // blue
}

.attention {
  font-size: @fontXXsmall;
  color: @attention; // pink
}

.alt-font {
  font-family: @alternativeFont;
}

// Link behaviour

@hoverOpacity: 0.8;

/*------------------------
      Layout constants
-------------------------*/

@headerHeight: 120px;
@footerHeight: 75px;
@borderRadius: 8px;

// Widths for various key containers
@applicationFormWidth: 900px;
@applicationListWidth: 900px; // Could be wider if table is getting cluttered?
@applicationSummaryWidth: 900px;
@applicationSummaryContentWidth: 700px;

// Box shadow -- used in Login form
@basicBoxShadow: @boxShadowColor 0px -3px 10px 0px;

// Box shadow -- used in Dashboard
@templateBoxShadow: 0 1px 3px 0 @boxShadowColor, 0 0 0 1px @boxShadowColor;
